<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <SolidColorBrush x:Key="IntenseAccentBrush" Color="{ThemeResource SystemAccentColor}" />
    <SolidColorBrush x:Key="IntenseControlBackgroundMediumBrush" Color="{ThemeResource SystemChromeMediumColor}" />
    <SolidColorBrush x:Key="IntenseControlDisabledLowBrush" Color="{ThemeResource SystemChromeDisabledLowColor}" />
    <SolidColorBrush x:Key="IntenseHighlightLowBrush" Color="{ThemeResource SystemListLowColor}" />
    <SolidColorBrush x:Key="IntenseHighlightMediumBrush" Color="{ThemeResource SystemListMediumColor}" />
    <SolidColorBrush x:Key="IntenseHighlightHighBrush" Color="{ThemeResource SystemBaseHighColor}" />
</ResourceDictionary>
